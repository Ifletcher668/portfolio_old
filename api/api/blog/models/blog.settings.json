{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "published": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "content.tags"
    },
    "preview": {
      "type": "string",
      "required": true,
      "default": "a newly published blog "
    }
  }
}
