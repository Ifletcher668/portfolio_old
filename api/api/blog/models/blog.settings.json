{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "published": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "content.tags"
    },
    "preview": {
      "type": "string",
      "required": true,
      "default": "a newly published blog "
    },
    "authors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "blog"
    },
    "quote": {
      "type": "component",
      "repeatable": true,
      "component": "content.quote"
    },
    "link_to_biography": {
      "type": "string",
      "required": true,
      "default": "isiahfletcher.com"
    },
    "slider": {
      "type": "component",
      "repeatable": false,
      "component": "content.slider"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.quote",
        "content.slider",
        "content.body-text",
        "content.media"
      ]
    }
  }
}
